import golosinas.*

describe "test de chocolatin"{

	var golosina = new BombonDuro()
	

	test "peso" {
		assert.equals(15, golosina.peso())
	}
	
	test "precio" {
		assert.equals(5, golosina.precio())
	}
	
	test "mordisco" {
		golosina.mordisco()
		assert.equals(13.5, golosina.peso())
		golosina.mordisco()
		assert.equals(12.15, golosina.peso())
	}
	
	
	test "gusto" {
		assert.equals("frutilla", golosina.gusto())
	}
	
	test "libre de gluten" {
		assert.that(golosina.libreGluten())	
	}
	
}